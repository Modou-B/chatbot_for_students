{% extends 'base.html.twig' %}

{% block title %}HOMEPAGE {{ parent() }}{% endblock %}

{% block body %}
<div class="container">

    {{ include ('/student/homepage.html.twig') }}

         {% for message in messages %}
             <div class="container">
                 <span class="time-right"></span>
                     {{ message }}
             </div>
         {% endfor %}

    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    <div class="row">
        <div class="col">
            <span>{{ form_row(form.message) }} {{ form_row(form.saveButton) }}</span>
        </div>
    </div>
    {{ form_end(form) }}


    {{ include ('/student/feedback.html.twig') }}
</div>
{% endblock %}